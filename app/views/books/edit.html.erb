<%= render 'layouts/validation_error', error_object: @book %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputName" %>
        </div>
        <div class="form-group">
          <label for="body">Introduction</label>
          <%= f.text_area :body, id:"body"%>
        </div>
        <%= f.submit "Update Book", class: 'btn btn-success' %><br>
        <%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>

      <% end %>
    </div>
  </div>
</div>
