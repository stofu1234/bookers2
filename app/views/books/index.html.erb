<%= render 'layouts/validation_error', error_object: @book %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <!-- 左ペイン -->
    <%= render 'layouts/left_pane', user: @user, book: @book %>
    <!-- 右ペイン -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>

        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <% book_user_path = book.user.present? ? user_path(book.user.id) : "" %>
            <th><%= link_to ( attachment_image_tag book, :profile_image, :fill, 40, 40, fallback: "no_image_small.jpg" ) , book_user_path %></th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
            <th colspan="3"></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @books %>
    </div>
  </div>
</div>

